<%- include ('head') %>

<body>
    <%- include ('nav') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg rounded-3 bg-white">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4 fw-bold text-dark animate__animated animate__fadeIn">เข้าสู่ระบบ</h2>
                        
                        <% if (typeof login_errors !== 'undefined' && login_errors.length > 0) { %>
                            <div class="alert alert-light border rounded-3 animate__animated animate__fadeIn" id="alert">
                                <ul class="mb-0 text-dark">
                                    <% login_errors.forEach(error => { %>
                                        <li><%= error %></li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% } %>

                        <form action="/login" method="post" novalidate class="needs-validation animate__animated animate__fadeIn">
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-dark rounded-start"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="user_email" class="form-control form-control-lg rounded-end" placeholder="อีเมล" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-dark rounded-start"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="user_pass" id="_pass" class="form-control form-control-lg rounded-end" placeholder="รหัสผ่าน" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-dark btn-md w-100 mb-4 shadow-sm hover-effect rounded-pill">เข้าสู่ระบบ</button>
                        </form>
                        
                        <div class="text-end animate__animated animate__fadeIn">
                            <a href="/forgotpass" class="text-decoration-none text-muted hover-effect">ลืมรหัสผ่าน?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        setTimeout(function() {
            var alert = document.getElementById('alert');
            if (alert) {
                alert.style.display = 'none';
            }
        }, 3000);
    </script>
</body>
</html>