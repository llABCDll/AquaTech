<%- include ('head') %>

<body>
    <%- include ('nav') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg rounded-3" style="background-color: #f8f9fa;">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4 fw-bold text-dark animate__animated animate__fadeIn" style="color: #26648E !important;">เข้าสู่ระบบ</h2>
                        
                        <style>
                            .alert ul {
                                list-style-type: none;
                                padding-left: 0;
                            }
                        </style>
                        <% if (typeof login_errors !== 'undefined' && login_errors.length > 0) { %>
                            <div class="alert alert-danger border-0 rounded-3 animate__animated animate__fadeIn" id="alert" role="alert">
                                <ul class="mb-0">
                                    <% login_errors.forEach(error => { %>
                                        <li><%= error.replace(/\.$/, '') %></li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% } %>

                        <% if (typeof success_message !== 'undefined' && success_message) { %>
                            <div class="alert alert-success border-0 rounded-3 animate__animated animate__fadeIn" id="successAlert" role="alert">
                                <p class="mb-0"><%= success_message %></p>
                            </div>
                        <% } %>

                        <form action="/login" method="post" novalidate class="needs-validation animate__animated animate__fadeIn">
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: #26648E; color: white;"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="user_email" class="form-control form-control-lg" placeholder="อีเมล" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: #26648E; color: white;"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="user_pass" id="_pass" class="form-control form-control-lg" placeholder="รหัสผ่าน" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-md w-100 mb-4 shadow-sm hover-effect rounded-pill" style="background-color: #26648E; color: white;">เข้าสู่ระบบ</button>
                        </form>
                        
                        <div class="text-end animate__animated animate__fadeIn">
                            <a href="/forgotpass" class="text-decoration-none hover-effect" style="color: #26648E;">ลืมรหัสผ่าน</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        setTimeout(function() {
            var alert = document.getElementById('alert');
            if (alert) {
                alert.style.display = 'none';
            }
            var successAlert = document.getElementById('successAlert');
            if (successAlert) {
                successAlert.style.display = 'none';
            }
        }, 5000);
    </script>
</body>
</html>