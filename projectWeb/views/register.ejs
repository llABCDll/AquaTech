<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="register-box">
            <h1 class="text-center mb-5 text-uppercase text-muted">NodeJS Register</h1>
            <form action="/register" method="post" novalidate>
                <div class="form-group mt-2">
                    <label for="_rname">Name</label>
                    <input type="text" name="user_name" id="_rname" class="form-control" value="<%= (locals.old_data) ? old_data.user_name : '' %>" placeholder="Name" required>
                </div>
                <div class="form-group mt-2">
                    <label for="_remail">Email</label>
                    <input type="email" name="user_email" id="_remail" class="form-control" value="<%= (locals.old_data) ? old_data.user_email : '' %>" placeholder="Email" required>
                </div>
                <div class="form-group mt-2">
                    <label for="_rpass">Password</label>
                    <input type="password" name="user_pass" id="_rpass" class="form-control" placeholder="Password" required>
                </div>
                <% if (locals.register_error) {
                    register_error.forEach(function(register_msg, index) { %>
                        <div class="alert alert-danger" role="alert" id="alert-<%= index %>"><%= register_msg %></div>
                    <% })
                } %>
                <button type="submit" class="mt-2 btn btn-primary w-100">Register</button>
            </form>
        </div>
    </div>
    <script>
        // ซ่อนข้อความแจ้งเตือนหลังจาก 3 วินาที
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.style.display = 'none';
            });
        }, 3000);
    </script>
</body>
</html>
