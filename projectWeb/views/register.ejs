<%- include ('head') %>

<body>
    <%- include ('nav') %>
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow-lg rounded-3" style="background-color: #f8f9fa;">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4 fw-bold animate__animated animate__fadeIn" style="color: #26648E;">ลงทะเบียน</h2>
                        
                        <style>
                            .alert ul {
                                list-style-type: none;
                                padding-left: 0;
                            }
                        </style>
                        <% if (typeof register_error !== 'undefined' && register_error.length > 0) { %>
                            <div class="alert alert-danger border-0 rounded-3 animate__animated animate__fadeIn" id="alert" role="alert">
                                <ul class="mb-0">
                                    <% register_error.forEach(error => { %>
                                        <li><%= error.replace(/\.$/, '') %></li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% } %>

                        <form action="/register" method="post" novalidate class="needs-validation animate__animated animate__fadeIn">
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: #26648E; color: white;"><i class="bi bi-person"></i></span>
                                    <input type="text" name="user_name" id="_rname" class="form-control form-control-lg" value="<%= (locals.old_data) ? old_data.user_name : '' %>" placeholder="ชื่อ" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: #26648E; color: white;"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="user_email" id="_remail" class="form-control form-control-lg" value="<%= (locals.old_data) ? old_data.user_email : '' %>" placeholder="อีเมล" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text" style="background-color: #26648E; color: white;"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="user_pass" id="_rpass" class="form-control form-control-lg" placeholder="รหัสผ่าน" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-md w-100 mb-4 shadow-sm hover-effect rounded-pill" style="background-color: #26648E; color: white;">ลงทะเบียน</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ซ่อนข้อความแจ้งเตือนหลังจาก 3 วินาที
        setTimeout(function () {
            document.querySelectorAll('.alert').forEach(function (alert) {
                alert.style.display = 'none';
            });
        }, 3000);
    </script>
</body>

</html>